@{ 
    Layout = null;
}
<div id="newStatementModal" class="modal fade" style="padding-top: 80px;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body">
                <p>Deixe um depoimento sobre o Sagrada Cruz :)</p>
                <form>
                    <div class="form-group">
                        <input type="text" class="form-control" id="nameStatement" placeholder="Nome">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="cityStatement" placeholder="Cidade">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" id="textStatement" placeholder="Depoimento"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-primary" onclick="jsNewStatement()">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>