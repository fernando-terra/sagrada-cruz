@model List<br.com.sagradacruz.Areas.Admin.Models.User>
@{
    ViewData["Title"] = "Manager";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <h3 style="border-left: solid 3px #0094ff">&nbsp; Usuários</h3>
    <br />
    <div class="row">
        <div class="col-sm-6">
            <table id="tblUsers" class="table table-striped table-bordered" style="width:100%; font-size: 14px;">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Usuário</th>
                        <th>Email</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.Name</th>
                                <th>@item.Username</th>
                                <th>@item.Email</th>
                                <th class="text-center"><a style="color: #000 !important" href="/Admin/User/Edit/@item.Id"><span class="fas fa-user-edit"></span></a></th>
                            </tr>
                        }

                    }
                </tbody>
            </table>
        </div>
    </div>
    <br />
    <a class="btn btn-primary" href="/Admin/User/New"><span class="fas fa-user-plus"></span>&nbsp; Novo Usuário</a>
</div>
